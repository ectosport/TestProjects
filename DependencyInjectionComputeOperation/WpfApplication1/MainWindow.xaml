<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="number1"></TextBox>
        <TextBox x:Name="number2"></TextBox>
        <TextBox x:Name="answer" IsReadOnly="True"></TextBox>
        <Button Content="Figure it out" Click="ButtonBase_OnClick"></Button>
        <RadioButton x:Name="AddOperation" GroupName="operation" IsChecked="True" Click="Operation_Clicked">Add</RadioButton>
        <RadioButton x:Name="SubtractOperation" GroupName="operation" Click="Operation_Clicked">Subtract</RadioButton>
        <RadioButton x:Name="MultiplyOperation" GroupName="operation" Click="Operation_Clicked">Multiply</RadioButton>
        <RadioButton x:Name="DivideOperation" GroupName="operation" Click="Operation_Clicked">Divide</RadioButton>
    </StackPanel>
</Window>
